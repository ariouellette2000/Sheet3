@model IEnumerable<Entities.Memo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">



    <tr>
        <th>
            @Html.DisplayNameFor(model => model.F_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.L_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile_Phone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Active == true)
        {
            <tr>
                <td>
                    <!--What is model item-->
                    @Html.DisplayFor(modelItem => item.F_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.L_Name)
                </td>
                
                    @if (item.Mobile_Phone != null)
                    {
                      <td>@Html.DisplayFor(modelItem => item.Mobile_Phone)</td>
                    }
                    else
                    {
                      <td>Not Available</td>
                    }
                
                
            <td>
                <!--text, name of function, pass-->

                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Remove", "Remove", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>

            </tr>
         }
     }

</table>
